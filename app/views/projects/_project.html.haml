.projectdash.grid_12.filterable_project{:"data-users" => project.user_ids, :"data-state" => project.state}
  .projectcontent
    .clearfix
      %h2= link_to project.name, project
      .hr
      .stats
        .grid_4
          %p Last Activity
          %div.flip
            %span= "#{date_to_words(project.last_activity)}"
        .grid_4
          %p Countdown
          %div.flip
            %span= countdown(project.end)
        .grid_4
          %p Status
          %div.flip= status_for_project(project)
    .hr
    .grid_12.lineup
      %ul.team
        - if project.users.empty?
          %li -
        - project.users && project.users.each do |user|
          %li= user.name