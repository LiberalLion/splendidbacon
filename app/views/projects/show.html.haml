#top
  %span.push_1.project_label Project
  %h1.push_1.grid_22= @project.name
  .clear
#middle.push_1.grid_22
  = simple_form_for [@project, @comment] do |f|
    = f.input :text, :label => "Post an update", :input_html => {  :rows => 5, :cols => 40, :class => "grid_14"}
    .clear
    %span.hint How is the project going?
    = f.button :submit, "Create"
  %ol
    - @project.statuses.each do |status|
      %li
        %span= status.user.name if status.user
        %span= status.created_at
        %span= status.text
        %span= link_to status.source, status.link
.clear
