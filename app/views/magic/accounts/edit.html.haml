#top
  %span.push_1.project_label Admin
  %h1.push_1.grid_20= current_admin.email
#leftcolumn.push_1.grid_15
  = simple_form_for(current_admin, :as => :admin, :url => registration_path(:admin), :html => { :method => :put }) do |f|
    = f.input :email, :input_html => {:class => "flip"}, :required => false
    = f.input :password, :hint => "leave blank if you don't want to change it", :input_html => {:class => "flip"}, :required => false
    = f.input :password_confirmation, :input_html => {:class => "flip"}
    = f.input :current_password, :hint => "we need your current password to confirm your changes", :input_html => {:class => "flip"}
    = f.button :submit, "Update", :class => "button", :style => "margin-top:10px"