#dashboard
  = render "project_filters"

  .clearfix
  - @organization.projects.current && @organization.projects.current.sort_by{|p| p.name.downcase}.each_with_index do |project, index|
    = render project
    - if (index + 1) % 2 == 0
      .clear

.clearfix
= link_to "Completed Projects", completed_organization_path(@organization), :class => "button"
