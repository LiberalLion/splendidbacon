$("#statuses").append("<%= escape_javascript(render @statuses) %>");
<% if @statuses.any? %>
  $("#more_statuses_link").attr("href", "<%= page_project_statuses_path(@project, :page => params[:page].to_i + 1 )%>")
  $.scrollTo("#status_<%= @statuses.first.id %>", 800);
<% end %>

<% if @statuses.empty? || params[:page].to_i >= @statuses.num_pages %>
  $("#more_statuses_link").fadeOut();
<% end %>