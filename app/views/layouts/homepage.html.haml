!!!
%html
  %head
    %meta{ :charset => "UTF-8" }
    %title Splendid Bacon
    <link href="/stylesheets/pictos_base64.css?1" media="screen" rel="stylesheet" type="text/css" />
    = stylesheet_link_tag "reset", "text", "960_24_col", "jquery-ui", "application", :cache => true
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js"
    = javascript_include_tag :defaults, :cache => true
    = csrf_meta_tag
    %link{ :rel => "shortcut icon", :href => "/favicon.png", :type => "image/png" }
    %link{ :rel => "apple-touch-icon-precomposed", :href => "/images/app-icon.png" }
  %body#frontpage
    %div
      = yield
    = render :partial => "layouts/analytics" if Rails.env.production?
