!!!
%html
  %head
    %meta{ :charset => "UTF-8" }
    %title= title(@title)
    = stylesheet_link_tag "pictos_base64"
    = stylesheet_link_tag "reset", "text", "960_24_col", "jquery-ui", "jquery.jgrowl", "application", :cache => true
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js"
    = javascript_include_tag :defaults, :cache => true
    = csrf_meta_tag
    %link{ :rel => "shortcut icon", :href => "/favicon.png", :type => "image/png" }
    %link{ :rel => "apple-touch-icon-precomposed", :href => "/images/app-icon.png" }
    %meta{ :name => "robots", :content => "noindex, nofollow" }
  %body
    #header
      .container_24
        #logo.grid_2.omega
          = link_to image_tag("header-logo.png"), root_path
    - unless flash.empty?
      - flash.each do |key, value|
        %div{:class => "#{key} pictos flash"}= value
    .container_24{ :id => background? ? "content" : nil }
      = yield
    = render :partial => "layouts/analytics" if Rails.env.production?

