!!!
%html
  %head
    %title Splendid Bacon
    = stylesheet_link_tag "reset", "text", "960_24_col", "application", :cache => true
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    = javascript_include_tag :defaults, :cache => true
    = csrf_meta_tag
  %body
    #header
      .container_24
        #title.grid_7
          &nbsp;
        #buttons.grid_13
          - if @organization && @organization.id
            = link_to image_tag("dashboard-button.png"), organization_path(@organization)
            = link_to image_tag("timeline-button.png"), timeline_organization_path(@organization)
        #logo.grid_4.omega
          = link_to image_tag("header-logo.png"), root_path
    #parked_links
      - if user_signed_in?
        #organization_nav
          %ul
            - if @organization && @organization.id
              %li= link_to @organization.name, @organization
            - current_user.organizations && current_user.organizations.each do |organization|
              - unless @organization == organization
                %li= link_to organization.name, organization
      - if user_signed_in?
        = link_to "Organizations", organizations_path
        = link_to "Logout", destroy_user_session_path
      - else
        = link_to "Login", new_user_session_path
    - unless flash.empty?
      - flash.each do |key, value|
        %div{:class => "#{key} flash"}= value
    #content.container_24= yield